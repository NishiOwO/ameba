# $Id$

OBJS = main.o

include @TOP@/config.mk

.PHONY: all install clean distclean
.SUFFIXES: .c .o

all: amb$(EXEC)

amb$(EXEC): $(OBJS)
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(LIBS) ../lib/libamb.a

.c.o:
	$(CC) -c $(CFLAGS) -o $@ $<

install: all

clean:
	rm -f amb *.exe *.o

distclean: clean
	rm -f Makefile
