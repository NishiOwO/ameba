DIRS = ./lib ./bin

include @TOP@/config.mk

.PHONY: all install clean distclean ./bin ./lib

all: ./bin

./bin:: ./lib
	$(MAKE) -C $@

./lib::
	$(MAKE) -C $@

install: all
	STATUS=0 ; for i in $(DIRS); do \
		$(MAKE) -C $$i $@ || STATUS=1 ; \
	done ; exit $$STATUS

clean:
	STATUS=0 ; for i in $(DIRS); do \
		$(MAKE) -C $$i $@ || STATUS=1 ; \
	done ; exit $$STATUS

distclean:
	STATUS=0 ; for i in $(DIRS); do \
		$(MAKE) -C $$i $@ || STATUS=1 ; \
	done ; exit $$STATUS
	rm -f config.h config.mk Makefile
