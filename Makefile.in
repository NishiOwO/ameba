# $Id$

DIRS = ./lib ./bin

include @TOP@/config.mk

.PHONY: all clean distclean ./bin ./lib

all: ./bin

./bin:: ./lib
	$(MAKE) -C $@

./lib::
	$(MAKE) -C $@

clean:
	STATUS=0 ; for i in $(DIRS); do \
		$(MAKE) -C $$i clean || STATUS=1 ; \
	done ; exit $$STATUS

distclean:
	STATUS=0 ; for i in $(DIRS); do \
		$(MAKE) -C $$i distclean || STATUS=1 ; \
	done ; exit $$STATUS
	rm -f config.h config.mk Makefile
